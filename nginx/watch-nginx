#!/bin/bash

( 
    inotifywait -r -m -e modify -e move -e create -e delete /etc/nginx | while read LINE; do
      echo -n "Sending HUP signal to nginx..."
      killall -HUP nginx && echo "NGINX restart: SUCCESS" || echo "NGINX restart: FAILED"
  done	    
) &

while true; do
      nginx -g 'daemon off;' || sleep 2
done